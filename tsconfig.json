{
  "compilerOptions": {
    "allowJs": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "module": "commonjs",
    "target": "esnext",
    "skipLibCheck": true,
    "sourceMap": false,
    "isolatedModules": false,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
